{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
